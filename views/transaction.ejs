    <div class="container-fluid page-body-wrapper">
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="container">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Orders</h4>
                    <div class="row grid-margin">
                      <div class="col-12">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="table-responsive">
                          <table id="order-listing" class="table">
                            <%    if(transaction.length != 0){  %>
                                
                            <thead>
                                <tr class="bg-primary text-white">
                                  <th>Date</th>
                                  <th>Amount</th>
                                  <th>From</th>
                                  <th>Type</th>
                                  <th>Order #</th>
                                  <th>Status</th>
                                </tr>
                              </thead>
                              
                            <tbody>
                                <%   transaction.forEach(function(payment){  %>
                                <%   if(payment.status == 'Pending'){  %>
                              <%       //Pending warning trnx  %>
                                    <tr>
                                        <td><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%></td>
                                        <td><%=payment.amount%></td>
                                        <td><%=payment.from%></td>
                                        <td><%=payment.type%></td>
                                        <td><%=payment.trnxId%></td>
                                        <td>
                                        <label class="badge badge-warning">Pending</label>
                                        </td>
                                    </tr>
                              
                                <%     }else{  %>
                                  <%     if(payment.status == 'success'){  %>
                                <%         if(payment.type == 'Credit'){  %>
                                      <%     //Credit Green trnx %>
                                      <tr>
                                        <td><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%></td>
                                        <td><%=payment.amount%></td>
                                        <td><%=payment.from%></td>
                                        <td><%=payment.type%></td>
                                        <td><%=payment.trnxId%></td>
                                        <td>
                                          <label class="badge badge-success">Credit</label>
                                        </td>
                                      </tr>
                                      
                              <%           }else{  %>
                                <%        //Debit Red trnx  %>
                                        <tr>
                                        <td><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%></td>
                                        <td><%=payment.amount%></td>
                                        <td><%=payment.from%></td>
                                        <td><%=payment.type%></td>
                                        <td><%=payment.trnxId%></td>
                                        <td>
                                        <label class="badge badge-info">Debit</label>
                                        </td>
                                        </tr>
                                
                                  <%       }  %>
                                <%       }else{  %>
                                <%     //failed Trnx  %>
                                        <tr>
                                        <td><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%></td>
                                        <td><%=payment.amount%></td>
                                        <td><%=payment.from%></td>
                                        <td><%=payment.type%></td>
                                        <td><%=payment.trnxId%></td>
                                        <td>
                                        <label class="badge badge-danger">Failed</label>
                                        </td>
                                        </tr>
                                <%       }  %>
                                <%     }  %>
                              <%     });  %>
                              
                            </tbody>
                              <%    }else{  %>
                                    <br><br>
                                    <div class="">
                                        <h6 class="mb-1 text-dark text-sm">No transactions found</h6>
                                    </div>
                              <%    } %>
                          </table>
                        </div>
                      </div>
                    </div>
