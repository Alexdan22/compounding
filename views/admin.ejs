    <div class="container-fluid page-body-wrapper">
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="container">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-lg-4">
                        <div class="border-bottom text-center pb-4">
                          <div class="mb-3">
                            <h3>Admin panel</h3>
                          </div>
                            <div class="tab-content tab-content-basic mt-4">
                                <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                                    <div class="row">
                                        <div class="col-sm-12">
                                        <div class="statistics-details d-flex align-items-center justify-content-between">
                                            <div>
                                                <p class="statistics-title">Total Users</p>
                                                <h3 class="rate-percentage"><%=total%></h3>
                                            </div>
                                            <div>
                                                <p class="statistics-title">Active Users</p>
                                                <h3 class="rate-percentage text-success"><%=currentUsers%></h3>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            
              
                        <%  if( review.length != 0){    %>
                          <div class="row mt-4">
                            <div class="col-lg-4">
                              <div class="border-bottom text-center pb-4">
                                <div class="mb-3 mt-3">
                                  <h5>Reviews - <%=review.length%></h5>
                                </div>
                              </div>
                          <%    review.forEach(function(reviewer){    %>
                            <div class="py-4">
                              <p class="clearfix">
                                <span class="float-start">
                                  Username
                                </span>
                                <span class="float-end text-muted">
                                  <%=reviewer.username%>
                                </span>
                              </p>
                              <p class="clearfix">
                                <span class="float-start">
                                  Email
                                </span>
                                <span class="float-end text-muted">
                                  <%=reviewer.email%>
                                </span>
                              </p>
                              <p class="clearfix">
                                <span class="float-start">
                                  Compound Amount
                                </span>
                                <span class="float-end text-muted">
                                  <%=reviewer.compound.active%>
                                </span>
                              </p>
                              <form class="forms-sample" action="/reviewCompounding" method="post">
                                <div class="form-group row">
                                  <div class="col">
                                    <label>Compounding Percentage</label>
                                    <input class="form-control" step="0.01" name="compounding" required type="number">
                                  </div>
                                  <input type="text" hidden name="email" value="<%=reviewer.email%>">
                                </div>
                                <div>
                                <button name="approve" class="btn text-end btn-rounded btn-success" type="submit">Proceed</button>
                                </div>
                              </form>
                            </div>
                            <hr>
                            <%  });    %>       

                            <%  }    %>
                    
                        
                            <%  if( pendingApproval != 0){    %>
                                <div class="row mt-4">
                                    <div class="col-lg-4">
                                      <div class="border-bottom text-center pb-4">
                                        <div class="mb-3 mt-3">
                                          <h5>Pending Payments - <%=pendingApproval%></h5>
                                        </div>
                                      </div>
                       
                                    <%    payment.forEach(function(newPayment){    %>
                                        <div class="py-4">
                                          <p class="clearfix">
                                            <span class="float-start">
                                              Username
                                            </span>
                                            <span class="float-end text-muted">
                                              <%=newPayment.username%>
                                            </span>
                                          </p>
                                          <p class="clearfix">
                                            <span class="float-start">
                                              Email
                                            </span>
                                            <span class="float-end text-muted">
                                              <%=newPayment.email%>
                                            </span>
                                          </p>
                                          <p class="clearfix">
                                            <span class="float-start">
                                              Amount
                                            </span>
                                            <span class="float-end text-muted">
                                              <%=newPayment.amount%>
                                            </span>
                                          </p>
                                          <p class="clearfix">
                                            <span class="float-start">
                                              Transaction ID
                                            </span>
                                            <span class="float-end text-muted">
                                              <%=newPayment.trnxId%>
                                            </span>
                                          </p>
                                          <p class="clearfix">
                                            <span class="float-start">
                                              Time
                                            </span>
                                            <span class="float-end text-muted">
                                              <%=newPayment.time.hour%>:<%=newPayment.time.minutes%> / <%=newPayment.time.date%>-<%=newPayment.time.month%>-<%=newPayment.time.year%>
                                            </span>
                                          </p>
                                          <form class="forms-sample" action="/planActivation" method="post">
                                            <div class="form-group row">
                                              <div class="col">
                                                <label>Direct commission</label>
                                                <input class="form-control" name="directPercentage" step="0.01" required type="number">
                                              </div>
                                              <div class="col">
                                                <label>Compounding</label>
                                                <input class="form-control" name="compounding" required type="number">
                                              </div>
                                              <input type="text" hidden name="username" value="<%=newPayment.username%>">
                                              <input type="text" hidden name="email" value="<%=newPayment.email%>">
                                              <input type="text" hidden name="approval" value="approve">
                                              <input type="number" hidden name="amount" value="<%=newPayment.amount%>">
                                              <input type="number" hidden name="trnxId" value="<%=newPayment.trnxId%>">
                                            </div>
                                            <div>
                                            <button name="approve" class="btn text-end btn-rounded btn-success" type="submit">Approve</button>
                                            </div>
                                          </form>
                                          <form class="forms-sample" action="/planActivation" method="post">
                                            <div class="form-group row">
                                              <input type="text" hidden name="username" value="<%=newPayment.username%>">
                                              <input type="text" hidden name="email" value="<%=newPayment.email%>">
                                              <input type="text" hidden name="approval" value="false">
                                              <input type="number" hidden name="amount" value="<%=newPayment.amount%>">
                                              <input type="number" hidden name="trnxId" value="<%=newPayment.trnxId%>">
                                            </div>
                                            <div>
                                            <button name="reject" class="btn text-start btn-rounded btn-danger" type="submit">Reject</button>
                                            </div>
                                          </form>
                                        </div>
                                        <hr>
                                      <%  });    %>
                                   
                                    </div>
                                  </div>
                            <%  }    %>
                            
              
                        <%  if(pendingWithdraw != 0){    %>
                          <div class="row mt-4">
                            <div class="col-lg-4">
                              <div class="border-bottom text-center pb-4">
                                <div class="mb-3 mt-3">
                                  <h5>Pending Withdrawal - <%=pendingWithdraw%></h5>
                                </div>
                              </div>
               
                              
                                    <%    withdrawal.forEach(function(invest){    %>
                                      <div class="py-4">
                                        <p class="clearfix">
                                          <span class="float-start">
                                            Email
                                          </span>
                                          <span class="float-end text-muted">
                                            <%=invest.email%>
                                          </span>
                                        </p>
                                        <p class="clearfix">
                                          <span class="float-start">
                                            Username
                                          </span>
                                          <span class="float-end text-muted">
                                            <%=invest.username%>
                                          </span>
                                        </p>
                                        <p class="clearfix">
                                          <span class="float-start">
                                            Transaction ID
                                          </span>
                                          <span class="float-end text-muted">
                                            <%=invest.trnxId%>
                                          </span>
                                        </p>
                                        <p class="clearfix">
                                          <span class="float-start">
                                            Time
                                          </span>
                                          <span class="float-end text-muted">
                                            <%=invest.time.hour%>:<%=invest.time.minutes%> / <%=invest.time.date%>-<%=invest.time.month%>-<%=invest.time.year%>
                                          </span>
                                        </p>
                                        <form class="forms-sample" action="/api/creditwithdrawal" method="post">
                                            <input type="text" hidden name="username" value="<%=invest.username%>">
                                            <input type="text" hidden name="email" value="<%=invest.email%>">
                                            <input type="text" hidden name="approval" value="true">
                                            <input type="number" hidden name="amount" value="<%=invest.amount%>">
                                            <input type="number" hidden name="trnxId" value="<%=invest.trnxId%>">
                                          </div>
                                          <div>
                                          <button name="approve" class="btn text-end btn-rounded btn-success" type="submit">Approve</button>
                                          </div>
                                        </form>
                                        <form class="forms-sample" action="/api/creditwithdrawal" method="post">
                                          <div class="form-group row">
                                            <input type="text" hidden name="username" value="<%=invest.username%>">
                                            <input type="text" hidden name="email" value="<%=invest.email%>">
                                            <input type="text" hidden name="approval" value="false">
                                            <input type="number" hidden name="amount" value="<%=invest.amount%>">
                                            <input type="number" hidden name="trnxId" value="<%=invest.trnxId%>">
                                          </div>
                                          <div>
                                          <button name="reject" class="btn text-start btn-rounded btn-danger" type="submit">Reject</button>
                                          </div>
                                        </form>
                                      </div>
                                      <hr>
                                      <%  });    %>
                                    </div>
                                  </div>
                                  
                      <%  }    %>
              
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
